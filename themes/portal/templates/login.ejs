<!DOCTYPE html>
<html>
<head>
  <title>Платформа ION: Вход</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">
  <base id="baseUrl" href="<%=baseUrl%>">
  <link rel="shortcut icon" href="/favicon.ico">
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
  <link href="css/essentials.min.css" rel="stylesheet" type="text/css">
  <link href="css/layout.min.css" rel="stylesheet" type="text/css">
</head>

<body>
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/moment/moment.min.js"></script>
<script src="vendor/moment-timezone/builds/moment-timezone-with-data.min.js"></script>

<div class="padding-15">
  <div class="login-box">
    <% if(errors.length) { %>
    <div id="error" class="alert alert-danger">
      <% errors.forEach(function(error){ %>
      <p><%= error %></p>
      <% }); %>
    </div>
    <% } %>
    <!-- login form -->
    <form action="<%=module%>/auth" method="post" class="sky-form boxed">
      <header><i class="fa fa-users"></i> Вход в систему (<%=module%>)</header>
      <input type="hidden" name="timezone" value="" />
      <fieldset>
        <section>
          <label class="label">Логин</label>
          <label class="input">
            <i class="icon-append fa fa-user"></i>
            <input id="username" type="login" name="username">
            <span class="tooltip tooltip-top-right">Логин</span>
          </label>
        </section>

        <section>
          <label class="label">Пароль</label>
          <label class="input">
            <i class="icon-append fa fa-lock"></i>
            <input id="password" type="password" name="password">
            <b class="tooltip tooltip-top-right">Пароль</b>
          </label>
        </section>
      </fieldset>

      <footer>
        <button id="authbutton" type="submit" class="btn btn-primary pull-left" style="margin-left:0;">
          Войти
        </button>
        <div class="forgot-password pull-right">
          <% if (canRegister) { %>
          <a href="<%=module%>/register"><b>Зарегистрироваться</b></a>
          <% } %>
          <% if (goHome) { %>
          &nbsp;&nbsp;
          <a href="<%- goHome %>"><span class="glyphicon glyphicon-home"></span> <b>Домой</b></a>
          <% } %>
        </div>
      </footer>
    </form>

  </div>
</div>
<script>
  $(function () {
    $('input[name=timezone]').val(moment.tz.guess());
  });
</script>
</body>
</html>
